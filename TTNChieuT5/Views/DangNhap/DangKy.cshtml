@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
<title>Login | E-Shopper</title>
<link href="~/Assets/User/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Assets/User/css/font-awesome.min.css" rel="stylesheet">
<link href="~/Assets/User/css/main.css" rel="stylesheet">
<link href="~/Assets/User/css/responsive.css" rel="stylesheet">
<link rel="shortcut icon" href="~/Assets/User/images//ico/favicon.ico">
<link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Assets/User/images//ico/apple-touch-icon-144-precomposed.png">
<link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Assets/User/images//ico/apple-touch-icon-114-precomposed.png">
<link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Assets/User/images//ico/apple-touch-icon-72-precomposed.png">
<link rel="apple-touch-icon-precomposed" href="~/Assets/User/images//ico/apple-touch-icon-57-precomposed.png">
<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Đăng ký tài khoản mới</h2>
                    <form action="#" method="post" id="formDangKy">
                        <input type="text" name="HoTen" placeholder="Họ tên" required>
                        <input type="text" name="TaiKhoan" placeholder="Tài khoản" required>
                        <input type="password" name="MatKhau" placeholder="Mật khẩu" required>
                        <input type="password" name="confirm_password" placeholder="Xác nhận mật khẩu" required>
                        <input type="number" name="SDT" placeholder="Số điện thoại" required>
                        <input type="text" name=" DiaChi" placeholder="Địa chỉ" required>
                        <button type="submit" class="btn btn-default">Đăng ký</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="js/jquery.js"></script>
    <script src="js/price-range.js"></script>
    <script src="js/jquery.scrollUp.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.prettyPhoto.js"></script>
    <script src="js/main.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            //Khi bàn phím được nhấn và thả ra thì sẽ chạy phương thức này
            $("#formDangKy").validate({
                rules: {
                    HoTen: "required",
                    TaiKhoan: {
                        required: true,
                        minlength: 6
                    },
                    MatKhau: {
                        required: true,
                        minlength: 8
                    },
                    confirm_password: {
                        required: true,
                        minlength: 8,
                        equalTo: "#password"
                    },
                    SDT: {
                        required: true,
                        minlength: 10
                    },
                    DiaChi: {
                        required: true,
                        minlength: 2
                    },
                },
                messages: {
                    HoTen: "Vui lòng điền đầy đủ họ tên",
                    TaiKhoan:{
                        required: "Vui lòng nhập tài khoản",
                    },
                    DiaChi: {
                        required: "Vui lòng nhập địa chỉ",
                        minlength: "Địa chỉ ngắn vậy, chém gió ah?"
                    },
                    SDT: {
                        required: "Vui lòng nhập số điện thoại",
                        minlength: "Số máy quý khách vừa nhập là số không có thực"
                    },
                    MatKhau: {
                        required: 'Vui lòng nhập mật khẩu',
                        minlength: 'Vui lòng nhập ít nhất 6 kí tự'
                    },
                    confirm_password: {
                        required: 'Vui lòng nhập mật khẩu',
                        minlength: 'Vui lòng nhập ít nhất 6 kí tự',
                        equalTo: 'Mật khẩu không trùng'
                    },
               
                 
                }
            });
        });

    </script>

</body >
