@using TTNChieuT5.Models;
@model List<SanPham>

@{
    int index = 1;
    int count = 0;
    int page = 10;
}
<div class=" col-md-12 ">
    <table class=" col-md-12 table table-dark">
        <thead>
            <tr>
                <td>STT</td>
                <td>Tên sản phẩm</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Hình ảnh</td>
                <td>#</td>

            </tr>
        </thead>
        <tbody>


            @foreach (var item in ViewBag.PetFood)
            {
                @if (count % page == 0 && count != 0)
                {
                    count++;
                }
                <tr class="pagation @Url.Content("Page"+count)">
                    <td>@index</td>
                    <td>@item.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@item.Gia</td>
                    <td><img src="@Url.Content("/Images/"+item.HinhAnh)" alt="Alternate Text " width="150px" /></td>
                    <td><a href="" class="btn btn-primary">Cập nhật</a></td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>
<div class="pagenatin">
    <div class="col-sm-4 col-xs-12 col-sm-offset-4">
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= count; i++)
                {
                    <li><a class="@Url.Content("Page"+i) ipage" href="#" data-soTrang="@Url.Content("Page"+i)">@i</a></li>
                }
            </ul>
        </nav>
    </div>
    <div class="clearfix"></div>
</div>

<style>
    .pagation{
        display:none;
    }
    .Page1{
        display:inline;
    }
</style>
<script>
        $(".ipage").click(function () {
            $(".pagation").hide();
            var soTrang = $(this).attr("data-soTrang");
            $("." + soTrang).show();
        });

</script>


